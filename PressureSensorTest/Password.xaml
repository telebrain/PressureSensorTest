<Window x:Class="PressureSensorTest.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PressureSensorTest"
        mc:Ignorable="d"
        Title="Введите пароль" Height="200" Width="200" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="123*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <PasswordBox x:Name="PasswordFeld" TabIndex="0" Margin="20,32,19.6,32.6" FontSize="14" VerticalAlignment="Center" Grid.ColumnSpan="2" ></PasswordBox>
        <Button Grid.Row="1" FontSize="14" TabIndex="2" Margin="20,20.4,19.6,20.2" Click="Button_Click" Grid.ColumnSpan="2" IsDefault="true">OK</Button>
    </Grid>
</Window>
